<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TreeActivity">

    <TextView
        android:id="@+id/pub_msg"
        android:layout_width="362dp"
        android:layout_height="168dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_pub_msg" />

    <TextView
        android:id="@+id/label_pub_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="72dp"
        android:text="Public Message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_new_pub_msg"
        android:layout_width="69dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:text="Post"
        app:layout_constraintEnd_toEndOf="@+id/pub_msg"
        app:layout_constraintTop_toBottomOf="@+id/pub_msg" />

    <EditText
        android:id="@+id/edit_new_pub_msg"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Say something ..."
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/btn_new_pub_msg"
        app:layout_constraintStart_toStartOf="@+id/pub_msg"
        app:layout_constraintTop_toBottomOf="@+id/pub_msg" />

</android.support.constraint.ConstraintLayout>